surName = Console.ReadLine();
Console.WriteLine("Напишите Ваше имя");
firstName = Console.ReadLine();
Console.WriteLine("Напишите Вашу электронную почту");
eMail = Console.ReadLine();
Console.WriteLine(eMail + " - " + surName + " " + firstName);
